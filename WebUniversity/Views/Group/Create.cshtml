@using UniversityApplication.CQRSModuels.Groups.Commands.Create;

@model CreateGroupCommand

@{
    ViewData["Title"] = "Create Group";
}

<div class="text-left">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form action="/Group/Create" method="post">
                <input type="hidden" asp-for="CourseId" />
                <div class="form-group mb-3">
                    <label class="control-label" asp-for="Name">Name</label>
                    <input class="form-control" type="text" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label" asp-for="Course.Name">Course Name</label>
                    <input class="form-control" type="text" asp-for="Course.Name" readonly>
                </div>
                <div class="form-group mb-3">
                    <input class="btn btn-primary" type="submit" value="Create">
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}