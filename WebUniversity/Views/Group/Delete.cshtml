@model UniversityApplication.CQRSModuels.Groups.Commands.Delete.DeleteGroupCommand

@{
    ViewData["Title"] = "Delete";
}
<div>
    <div class="row">
        <div class="col-md-4">
            <form action="/Group/Delete" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h4>Are you sure you want to delete this?</h4>
                <div class="form-group m-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input type="text" asp-for="Name" class="form-control" readonly/>
                </div>
            </form>
        </div>
    </div>

    <form asp-action="Delete">
        <input  type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-controller="Course" asp-action="Index">Back to List</a>
    </form>
</div>
